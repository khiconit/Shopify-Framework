{% include 'top-link' %}
<div class="row">
		<div id="top">
		<div class="col-md-3 col-sm-6 sol-xs-12">
			{% if template == 'index' %}
              <h1 class="site-header logo-header" itemscope itemtype="http://schema.org/Organization">
            {% else %}
              <div class="h1 site-header logo-header" itemscope itemtype="http://schema.org/Organization">
            {% endif %}
              {% if settings.logo_use_image %}
                <a href="/" itemprop="url" class="logo-link">
                  <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo" width="{{settings.logo_max_width}}">
                </a>
              {% else %}
                <a href="/" itemprop="url">{{ shop.name }}</a>
              {% endif %}
            {% if template == 'index' %}
              </h1>
            {% else %}
              </div>
            {% endif %}
		</div>
      <div class="col-md-9 col-sm-6 col-xs-12">
      	{% include  'header-search'  %}
      </div>
	</div>
</div>
{% if settings.menu_use_vertical %}
	{% include 'menu' type:'vertical' handle:settings.menu_vertical_choose %}
{% endif %}
{% include 'menu' type:'horizontal' handle:'main-menu' %}


{% comment %}<div class="row">
	{% include 'megamenu' %}
</div>{% endcomment %}
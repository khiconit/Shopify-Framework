<div id="search_top" class="col-xs-12 col-sm-12 col-md-6 col-lg-3 pull-right">
    <span id="search-icon" class="fa fa-search" title=""></span>
    <form id="searchbox" class="popup-content" action="/search" method="get" role="search">
        <input type="hidden" name="type" value="product">
        <input id="search-ajax" class="search_query form-control" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}">
        <button id="search_button" class="btn btn-sm" type="submit" >
            <span><i class="fa fa-search"></i></span>
            <span class="fallback-text">{{ 'general.search.submit' | t }}</span>
        </button>
    </form>
    <div id="search-results">
    	
    </div>
</div>